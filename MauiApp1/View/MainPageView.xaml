<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             x:Class="SpinningTrainer.MainPageView"             
             Title="Spinning Trainer">
    <Grid BackgroundColor="White">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.15*"/>
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0">
            <Frame Margin="10"
                   Background="{StaticResource Primary}">
                <SearchBar Background="Transparent"
                           Placeholder="Búsqueda..."
                           PlaceholderColor="White"
                           WidthRequest="380"
                           CancelButtonColor="White"
                           TextColor="White"
                           IsTextPredictionEnabled="True"/>
            </Frame>
        </StackLayout>

        <StackLayout Grid.Row="1"
                     HorizontalOptions="Start">
            <Frame Margin="10,0,0,0"
                   WidthRequest="150"
                   Background="{StaticResource Primary}">
                <HorizontalStackLayout>
                    <Label Text="Fecha:"
                           VerticalOptions="Center"/>
                    
                    <DatePicker Background="Transparent"
                                VerticalOptions="Center"
                                Margin="10,0,0,0"
                                WidthRequest="100"/>
                </HorizontalStackLayout>
            </Frame>
        </StackLayout>

        <ListView ItemsSource="{Binding infoSesiones}"
                  x:Name="lvInfoSesiones"
                  HorizontalOptions="Center" 
                  Grid.Row="2"                  
                  Margin="10,0,10,0"                  
                  SeparatorColor="White"
                  RowHeight="122"
                  SelectionMode="Single">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell AutomationId="{Binding Id}">
                        <Grid Background="Transparent"
                              Padding="0,12,0,0">
                            <Frame CornerRadius="5"                               
                                   Background="{StaticResource Primary}">
                                <StackLayout Background="Transparent"
                                             Padding="5,5,5,5">
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="{Binding Id}" 
                                               FontAttributes="Bold"
                                               FontFamily="Tahoma"
                                               TextColor="White"
                                               FontSize="12"
                                               HorizontalOptions="StartAndExpand"/>

                                        <ImageButton Source="popupmenuicon.png"
                                                     WidthRequest="30"
                                                     HeightRequest="30"
                                                     Clicked="ImageButton_Clicked"/>
                                    </StackLayout>
                                    <Label Text="{Binding Descrip}" 
                                           FontFamily="Tahoma"
                                           TextColor="White"
                                           FontSize="20"
                                           Margin="0,10,0,0"
                                           VerticalOptions="CenterAndExpand"
                                           VerticalTextAlignment="Center"/>
                                    <StackLayout Orientation="Horizontal"
                                                 VerticalOptions="EndAndExpand">
                                        <Label Text="{Binding DescripEntrenador}"
                                               FontFamily="Tahoma"
                                               FontSize="12"
                                               TextColor="White"                                           
                                               VerticalOptions="EndAndExpand"/>

                                        <StackLayout HorizontalOptions="EndAndExpand"
                                                     Orientation="Vertical">
                                            <Label Text="{Binding Fecha, StringFormat='{0:dd/MM/yyyy}'}"
                                                   FlowDirection="RightToLeft"
                                                   FontFamily="Tahoma"
                                                   TextColor="White"                                           
                                                   FontSize="12"
                                                   HorizontalOptions="End"/>
                                            <Label Text="{Binding Fecha, StringFormat='{0:hh:mm tt}'}"                                           
                                                   FlowDirection="RightToLeft"
                                                   FontFamily="Tahoma"
                                                   TextColor="White"                                           
                                                   FontSize="12"
                                                   HorizontalOptions="End"/>
                                        </StackLayout>
                                    </StackLayout>
                                    <!-- Agrega aquí más campos si los necesitas -->
                                </StackLayout>
                            </Frame>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <HorizontalStackLayout Grid.Row="3"
                               Background="{StaticResource Primary}">
            <Grid HorizontalOptions="Center"
                  HeightRequest="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="140"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"                       
                        BorderWidth="0"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="CenterAndExpand"
                        ImageSource="icontemplates"
                        Margin="0,-10,0,0"/>

                <Frame Grid.Column="1"
                       Margin="0,-30,0,0"
                       CornerRadius="150">
                    <Button x:Name="btnCreateNewSession"
                            ImageSource="mas"
                            WidthRequest="50"
                            HeightRequest="50"
                            BorderWidth="0"
                            Clicked="btnCreateNewSession_Clicked"/>
                </Frame>

                <Button Grid.Column="2"
                        BorderWidth="0"
                        ImageSource="charticon.png"
                        Margin="0,-10,0,0"/>
            </Grid>            
        </HorizontalStackLayout>
    </Grid>
</ContentPage>