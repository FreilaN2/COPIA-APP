<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpinningTrainer.Views.SplashScreenView"            
             Background="{StaticResource PrimaryDark}"
             Appearing="ContentPage_Appearing">
    <VerticalStackLayout>
        <Image Source="logosplash.png"/>
        
        <Label Text="Spin Trainer" 
               HorizontalTextAlignment="Center"
               FontSize="35"/>

        <Label x:Name="lblMuestraMensajeCargandoAlUsuario"
               Text="Spin Trainer" 
               Margin="5,30,5,0"
               HorizontalTextAlignment="Center"
               FontSize="15"/>
        
        <ProgressBar x:Name="pbLoadProgress"
                     Margin="0,10,0,0"/>

        <Label x:Name="lblTituloConsejo"
               Text="" 
               Margin="5,30,5,0"
               HorizontalTextAlignment="Center"
               FontSize="15"
               FontAttributes="Bold"/>

        <Label x:Name="lblConsejo"
               Text="" 
               Margin="5,15,5,0"
               HorizontalTextAlignment="Center"
               FontSize="15"/>
    </VerticalStackLayout>
</ContentPage>