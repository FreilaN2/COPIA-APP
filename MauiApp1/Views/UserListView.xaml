<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpinningTrainer.Views.UserListView">
    <!-- Contenedor principal con Grid -->
    <Grid BackgroundColor="#FFFFFF" Padding="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> 
            <RowDefinition Height="*" />    
            <RowDefinition Height="Auto" /> 
        </Grid.RowDefinitions>

        <BoxView HeightRequest="50" Color="#FFA500" Grid.Row="0" Margin="0,-50,0,0"/>

        <StackLayout BackgroundColor="#FFFFFF" Padding="10" Grid.Row="1">
            <Label Text="Lista de Usuarios" FontSize="Large" HorizontalOptions="Center" Margin="0,10,0,20" TextColor="#FFA500"/>
            <ListView x:Name="ltvUserListView" Margin="0,0,0,10" ItemTapped="ltvUserListView_ItemTapped" BackgroundColor="#FFFFFF">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Margin="0,0,0,10">
                                <Label VerticalOptions="Center" HorizontalOptions="StartAndExpand" TextColor="#FFA500">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{Binding ID}" />
                                            <Span Text=" - " />
                                            <Span Text="{Binding CodUsua}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <RadioButton GroupName="UserSelection" IsChecked="{Binding IsSelected}" VerticalOptions="Center" HorizontalOptions="End" WidthRequest="30" HeightRequest="30"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>

        <Grid HeightRequest="50" BackgroundColor="#FFA500" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ImageButton x:Name="btnAgregarUsers" Clicked="btnAgregarUsers_Clicked" WidthRequest="40" HeightRequest="40" Grid.Column="0" HorizontalOptions="Center" BackgroundColor="Transparent">
                <ImageButton.Source>
                    <FileImageSource File="agregar_usuario.png" />
                </ImageButton.Source>
            </ImageButton>
            <ImageButton x:Name="btnEliminarUsers" Clicked="btnEliminarUsers_Clicked" WidthRequest="40" HeightRequest="40" Grid.Column="1" HorizontalOptions="Center" BackgroundColor="Transparent">
                <ImageButton.Source>
                    <FileImageSource File="eliminar.png" />
                </ImageButton.Source>
            </ImageButton>
        </Grid>
    </Grid>
</ContentPage>